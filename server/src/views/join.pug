extends base.pug

    
block content 
   form(method="POST") 
      input(name="name", type="text", required, placeholder="이름")
      input(name="email", type="email", required, placeholder="이메일")
      input(name="username", type="text", required, placeholder="아이디")
      input(name="password", type="password", required, placeholder="비밀번호")
      input(name="password2", type="password", required, placeholder="비밀번호 확인")
      input(type="submit", value="회원가입")
   div
      span Already have an account? 
      a(href="/login") Log in now