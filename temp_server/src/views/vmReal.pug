doctype html
head
    meta(charset='UTF-8')
    title WatchDog
    style.
        .card-body{
            display: flex;
        }
        .card-graph {
            width: 720px;
            height: 290px;
            margin: 0px;
            background-color: aliceblue;
            padding-top: 20px;

        }
        .card-circle{
            width: 230px;
            height: 230px;
            border-radius: 50%;
            margin: 30px;
        }
        .chartjs-render-monitor {
            animation: chartjs-render-animation 1ms;
        }
        #myCpuChart,
        #myMemoryChart{
            width: 720px;
            height: 270px;
        }
body
    h1 CPU 사용률
    div.card-body
        div.card-circle
            canvas#cpuCircle(width="1920" height="1080")
        div.card-graph
            canvas#myCpuChart(width="1920" height="720")
    h1 Memory 사용률
    div.card-body
        div.card-circle
            canvas#memoryCircle(width="1920" height="1080")
        div.card-graph
            canvas#myMemoryChart(width="1920" height="720")
