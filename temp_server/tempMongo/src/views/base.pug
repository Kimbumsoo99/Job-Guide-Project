doctype html
html(lang="ko")
    head
        title #{pageTitle} | JobGuide
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body
        header
            h1=pageTitle 
            nav
                ul 
                    li
                        a(href="/") 메인
                    li
                        a(href="/board") 게시판
                    li
                        a(href="/users") 프로필
                    if loggedIn
                        li
                            a(href="/board/write") 게시글 등록
                        li
                            a(href="/logout") 로그아웃

                    else
                        li
                            a(href="/login") 로그인
        main
            block content

    include partials/footer